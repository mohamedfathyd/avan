<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mask"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/logored" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:textColor="@color/blue"
        android:id="@+id/a"
        android:textSize="18dp"
        android:text="الرجاء تحديد اللغة"
        android:layout_below="@id/imageView"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/b"
        android:layout_marginTop="10dp"
        android:textColor="@color/blue"
        android:textSize="17dp"
        android:text="Please Select Your Language"
        android:layout_below="@id/a"
        />



        <TextView
            android:layout_width="160dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:text="عربي"
            android:id="@+id/langar"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/b"
            android:textStyle="bold"
            android:background="@drawable/backshapered"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="wrap_content" />

    <TextView
        android:layout_width="160dp"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:text="English"
        android:id="@+id/langen"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/langar"
        android:textStyle="bold"
        android:background="@drawable/backshapeempty"
        android:textColor="@color/red_dark"
        android:gravity="center"
        android:layout_height="wrap_content" />

</RelativeLayout>