<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               >
               <ScrollView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="محمد فتحي عبد الباسط"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/taj"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentEnd="true"
                        android:textSize="18dp"
                        android:id="@+id/name"
                        android:background="@drawable/backshapeblue"
                        />
                       <androidx.recyclerview.widget.RecyclerView
                           android:layout_width="match_parent"
                           android:layout_height="220dp"
                           android:layout_below="@id/name"
                           android:background="@drawable/shapea"
                           android:id="@+id/recyclerview2"
                           android:orientation="horizontal"
                           android:layout_gravity="center"
                           app:reverseLayout="true"
                           android:layout_centerHorizontal="true"
                           android:layout_marginRight="13dp"
                           android:layout_marginLeft="13dp"
                           android:layout_marginTop="15dp"
                           android:padding="1dp"
                           >

                       </androidx.recyclerview.widget.RecyclerView>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/recyclerview2"
                           android:layout_margin="10dp"
                           android:orientation="horizontal"
                           android:weightSum="3"
                           android:id="@+id/s"
                           >
                           <TextView
                               android:layout_width="0dp"
                               android:layout_weight="1.1"
                               android:layout_height="wrap_content"
                               android:textColor="@color/blue"
                               android:text="@string/track_ship"
                               android:gravity="center"
                               android:fontFamily="@font/taj"
                               android:layout_gravity="center"
                               android:textSize="17dp"
                               />
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1.9"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal"
                               android:weightSum="3"
                               android:paddingStart="5dp"
                               android:background="@drawable/backshapeemptybluee"
                               >
                               <EditText
                                   android:layout_width="0dp"
                                   android:layout_height="37dp"
                                   android:layout_weight="2.3"
                                   android:fontFamily="@font/taj"
                                   android:id="@+id/number"
                                   android:background="@null"
                                   android:hint="@string/enter_number_track"
                                   />
                               <ImageView
                                   android:layout_width="0dp"
                                   android:layout_height="match_parent"
                                   android:layout_weight="0.7"
                                   android:id="@+id/search"
                                   android:src="@drawable/group13"
                                   android:background="@drawable/backshaperedg"
                                   />
                           </LinearLayout>
                       </LinearLayout>
                       <RelativeLayout
                           android:layout_width="170dp"
                           android:layout_below="@id/s"
                           android:layout_marginTop="30dp"
                           android:background="@drawable/backgroundstyleround"
                           android:layout_centerHorizontal="true"
                           android:id="@+id/order"
                           android:layout_height="170dp">
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="vertical"
                               android:weightSum="2"
                               >
                               <ImageView
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:padding="10dp"
                                   android:layout_weight="1"
                                   android:scaleType="fitCenter"
                                   android:src="@drawable/new1"
                                   />
                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:layout_weight="1"
                                   android:layout_gravity="center"
                                   android:gravity="center"
                                   android:fontFamily="@font/taj"
                                   android:background="@drawable/backshaperedg"
                                   android:textColor="@color/white"
                                   android:textStyle="bold"
                                   android:textSize="18dp"
                                   android:text="@string/order_charge"
                                   />
                           </LinearLayout>

                       </RelativeLayout>
                   </RelativeLayout>
               </ScrollView>
           </RelativeLayout>
    </RelativeLayout>
</FrameLayout>