<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/track_ship"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/taj"
            android:layout_marginLeft="20dp"
            android:layout_alignParentEnd="true"
            android:textSize="18dp"
            android:id="@+id/title"
            android:background="@drawable/backshapeblue"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:id="@+id/s"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="@string/track_ship"
                android:gravity="center"
                android:fontFamily="@font/taj"
                android:layout_gravity="center"
                android:textSize="17dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.9"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:paddingStart="5dp"
                android:background="@drawable/backshapeemptybluee"
                >
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="37dp"
                    android:layout_weight="2.3"
                    android:fontFamily="@font/taj"
                    android:id="@+id/number"
                    android:background="@null"
                    android:hint="@string/enter_number_track"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:id="@+id/search"
                    android:src="@drawable/group13"
                    android:background="@drawable/backshaperedg"
                    />
            </LinearLayout>
        </LinearLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="12"
               android:layout_below="@id/s"
               android:layout_margin="15dp"
               android:background="@color/transparent"
               >
               <ScrollView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:id="@+id/a"
                          android:layout_centerHorizontal="true"
                          >
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_margin="5dp"
                              android:text="@string/number_track"
                              android:textStyle="bold"
                              android:textSize="18dp"
                              android:textColor="@color/blue"
                              android:fontFamily="@font/taj"
                              />
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_margin="5dp"
                              android:text=""
                              android:id="@+id/track_num"
                              android:textStyle="bold"
                              android:textSize="18dp"
                              android:textColor="@color/red_dark"
                              android:fontFamily="@font/taj"
                              />
                      </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/a"
                        android:layout_marginTop="10dp"
                        android:id="@+id/aa"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="@string/receipt_request"
                            android:textStyle="bold"
                            android:textSize="19dp"
                            android:textColor="@color/red_dark"
                            android:fontFamily="@font/taj" />
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:padding="15dp"
                            android:src="@drawable/noun_delivery_36277"
                            android:layout_height="70dp"
                            android:background="@drawable/backshapeemptybluet"
                            />
                    </LinearLayout>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/aa"
                           android:layout_marginTop="10dp"
                           android:id="@+id/bb"
                           android:layout_centerHorizontal="true"
                           android:orientation="vertical"
                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_margin="5dp"
                               android:text="@string/Shipment_progress"
                               android:textStyle="bold"
                               android:textSize="19dp"
                               android:textColor="@color/red_dark"
                               android:fontFamily="@font/taj" />
                           <ImageView
                               android:layout_width="70dp"
                               android:layout_gravity="center"
                               android:scaleType="fitXY"
                               android:padding="15dp"
                               android:src="@drawable/noun_delivery_960742"
                               android:layout_height="70dp"
                               android:background="@drawable/backshapeemptybluet"
                               />
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/bb"
                           android:layout_marginTop="10dp"
                           android:id="@+id/cc"
                           android:layout_centerHorizontal="true"
                           android:orientation="vertical"
                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_margin="5dp"
                               android:text="@string/request_delevried"
                               android:textStyle="bold"
                               android:textSize="19dp"
                               android:gravity="center"
                               android:textColor="@color/red_dark"
                               android:fontFamily="@font/taj" />
                           <ImageView
                               android:layout_width="70dp"
                               android:layout_gravity="center"
                               android:scaleType="fitXY"
                               android:padding="15dp"
                               android:src="@drawable/noun_delivery_36276"
                               android:layout_height="70dp"
                               android:background="@drawable/backshapeemptybluet"
                               />
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/cc"
                           android:layout_marginTop="10dp"
                           android:id="@+id/dd"
                           android:layout_centerHorizontal="true"
                           android:orientation="vertical"
                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_margin="5dp"
                               android:text="@string/Congratulations"
                               android:textStyle="bold"
                               android:textSize="19dp"
                               android:textColor="@color/red_dark"
                               android:fontFamily="@font/taj" />
                           <ImageView
                               android:layout_width="70dp"
                               android:layout_gravity="center"
                               android:scaleType="fitXY"
                               android:padding="15dp"
                               android:src="@drawable/noun_delivery_3581453"
                               android:layout_height="70dp"
                               android:background="@drawable/backshapeemptybluet"
                               />
                       </LinearLayout>
                   </RelativeLayout>
               </ScrollView>
           </RelativeLayout>


    </RelativeLayout>
</FrameLayout>